@model IEnumerable<FinalTask.Domain.Entities.Visit>

@{
    ViewBag.Title = "Index";
}

<h2>Мої візити</h2>

<p align="right">@Html.ActionLink("Вийти", "Logout", "Account", null, new { @class = "btn btn-primary" })</p>
<p>@Html.ActionLink("Особиста інформація", "SeeDetails", "Account", null, new { @class = "btn btn-primary" })</p>

@if (!Model.Any())
{
    <tr>
        <td colspan="3" class="text-center">Немає жодного відвіданого міста</td>
    </tr>
}
else
{
    <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Назва міста</th>
                    <th>Дата відвідування</th>
                    <th></th>
                    <th>Інформація про місто</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var visit in Model)
                {
                    <tr class="odd grageA">
                            <td>@visit.City.Name</td>
                            <td>@visit.Date</td>
                            <td class="center">@Html.ActionLink("Переглянути деталі", "SeeDetails", "Visit", new { id = visit.Id }, new { @class = "btn btn-primary" })</td>
                        <td class="center">@Html.ActionLink("Переглянути", "SeeWiki", "Visit", new { id = visit.CityId }, new { @class = "btn btn-primary" })</td>
                    </tr>
                }
            </tbody>
        </table>
  </div>
}
<p>@Html.ActionLink("Переглянути заплановані візити", "SeeScheduled", "Visit", null, new { @class = "btn btn-primary" })</p>
<p>@Html.ActionLink("Додати відвідане місто", "AddVisit", "Visit", null, new { @class = "btn btn-primary" })</p>
<p>@Html.ActionLink("Показати усі міста на карті", "SeeOnMap", "Visit", null, new { @class = "btn btn-primary" })</p>


