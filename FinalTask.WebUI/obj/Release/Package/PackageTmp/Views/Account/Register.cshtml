@model FinalTask.WebUI.Models.RegisterViewModel

@{
    ViewBag.Title = "Реєстрація";
}
<body ng-app="app">
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-messages.min.js"></script>
    @section scripts
{
        <script>
        var app = angular.module('app', ['ngMessages']);
        </script>
    }
    <h2>@ViewBag.Title.</h2>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-heading">
                            <h4>Створити новий аккаунт</h4>
                        </div>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "col-md-10 control-label" })
                            <div class="col-md-10">
                                <input type="text" name="Name" class="form-control" placeholder="Введіть ім'я'" ng-model="name" required />
                                <div ng-messages="Name.$error">
                                    <div ng-message="required">Це поле обов'язкове для введення</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Surname, new { @class = "col-md-10 control-label" })
                            <div class="col-md-10">
                                <input type="text" name="Surname" class="form-control" placeholder="Введіть прізвище" ng-model="surname" required />
                                <div ng-messages="Surname.$error">
                                    <div ng-message="required">Це поле обов'язкове для введення</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Telephone, new { @class = "col-md-10 control-label" })
                            <div class="col-md-10">
                                <input type="text" name="Telephone" class="form-control" placeholder="Введіть телефон" ng-model="telephone" required />
                                <div ng-messages="Telephone.$error">
                                    <div ng-message="Telephone">Це поле обов'язкове для введення</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-10 control-label" })
                            <div class="col-md-10">
                                <input type="text" name="Email" class="form-control" placeholder="Введіть Email" ng-model="email" required />
                                <div ng-messages="Email.$error.required ">
                                    <div ng-message="Email">Це поле обов'язкове для введення</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-10 control-label" })
                            <div class="col-md-10">
                                <input type="password" name="Password" class="form-control" placeholder="Введіть пароль" ng-model="pass" required />
                                <div ng-messages="Password.$error">
                                    <div ng-message="Password">Це поле обов'язкове для введення</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-10 control-label" })
                            <div class="col-md-10">
                                <input type="password" name="ConfirmPassword" class="form-control" placeholder="Повторіть введення паролю" ng-model="conpass" required />
                                <div ng-messages="ConfirmPassword.$error">
                                    <div ng-message="ConfirmPassword">Це поле обов'язкове для введення</div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary" value="Зареєструватися" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>