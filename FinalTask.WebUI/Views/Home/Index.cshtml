@model IEnumerable<FinalTask.Domain.Entities.Photo>

<h2>Головна сторінка</h2>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<ul class="nav navbar-nav navbar-right">
    <li>@Html.ActionLink("Реєстрація", "Register", "Account", null, htmlAttributes: new { id = "registerLink", @class = "btn btn-primary" })</li>
    <li>@Html.ActionLink("Увійти", "Login", "Account", null, htmlAttributes: new { id = "loginLink", @class = "btn btn-primary" })</li>
</ul>
<br/>
<br />
<br />
@if (Model.Any())
{
    <div id="myimgslide" class="carousel slide" data-interval="3000" data-ride="carousel">

        <ol class="carousel-indicators">
            <li data-target="#myimgslide" data-slide-to="0" class="active"></li>
            @for (var i = 1; i < Model.Count(); i++)
            {
                <li data-target="#myimgslide" data-slide-to=@i></li>
            }
        </ol>

        <div class="carousel-inner">

            <div class="item active">
                <img src="@Url.Action("GetImage", "Home", new {id = @Model.First().Id})"/>
                <div class="carousel-caption">

                </div>
            </div>
            @foreach (var photo in Model)
            {
                <div class="item ">
                    <img src="@Url.Action("GetImage", "Home", new {id = @photo.Id})"/>
                    <div class="carousel-caption">
                    </div>
                </div>
            }
           
        </div>

        <a class="left carousel-control" href="#myimgslide" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only"></span>
        </a>

        <a class="right carousel-control" href="#myimgslide" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
}
