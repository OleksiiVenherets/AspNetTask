@model IEnumerable<string>
@{ 
    ViewBag.Title = "Помилка";
}
<div class="alert alert-danger">
    @switch (Model.Count()) {
        case 0:
            @: Щось пішло не так! Спробуйте ще раз.
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: БУли виявлені такі помилки:
            <ul>
                @foreach (string error in Model) {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
